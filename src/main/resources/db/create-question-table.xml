<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
    <changeSet id="create-question-table" author="matrasj">
        <createTable tableName="question">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="content" type="varchar"/>

            <column name="question_type" type="varchar">
                <constraints nullable="false"/>
            </column>

            <column name="category_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="fk_question_question_category"
                             referencedColumnNames="id"
                             referencedTableName="category"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-question-answer-table" author="matrasj">
        <createTable tableName="question_answer">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="question_id" type="bigint">
                <constraints foreignKeyName="fk_question_answer_question"
                             referencedTableName="question"
                             referencedColumnNames="id"/>
            </column>

            <column name="content" type="varchar"/>
            <column name="correct" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>